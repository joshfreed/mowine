platform :ios, '11.0'

target 'mowine' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for mowine
  pod 'Eureka', '~> 4.3.0'
  pod 'Cosmos', '~> 17.0.0'
  pod 'PureLayout', '~> 3.1.4'
  pod 'SwiftyBeaver', '~> 1.7'
  pod 'Dip', '~> 7.0.0'
  pod 'PromiseKit', '~> 6.8'
  
  # Facebook
  pod 'FBSDKCoreKit', '~> 4.38.0'
  pod 'FBSDKLoginKit', '~> 4.38.0'
  
  # Firebase
  pod 'Firebase/Core', '~> 5.14.0'
  pod 'Firebase/Auth', '~> 5.14.0'
  pod 'Firebase/Firestore', '~> 5.14.0'
  pod 'Firebase/Storage', '~> 5.14.0'
  pod 'Firebase/Performance', '~> 5.14.0'
  pod 'GoogleSignIn', '~> 4.4.0'
  pod 'FirebaseUI', '~> 5.1.0'
  
  # Crashlytics
  pod 'Fabric', '~> 1.9.0'
  pod 'Crashlytics', '~> 3.12.0'

  target 'mowineTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Nimble'
  end
end

target 'mowineUITests' do
