platform :ios, '11.0'

target 'mowine' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for mowine
  pod 'Eureka'
  pod 'Cosmos'
  pod 'PureLayout'
  pod 'SwiftyBeaver', '~> 1.7'
  pod 'Dip'
  pod 'PromiseKit', '~> 6.8'
  
  # Facebook
  pod 'FBSDKCoreKit', '~> 4.38.0'
  pod 'FBSDKLoginKit', '~> 4.38.0'
  
  # Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Storage'
  pod 'Firebase/Performance'
  pod 'GoogleSignIn'
  pod 'FirebaseUI', '~> 5.1.0'
  
  # Crashlytics
  pod 'Fabric', '~> 1.9.0'
  pod 'Crashlytics', '~> 3.12.0'

  target 'mowineTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Nimble'
  end
end

target 'mowineUITests' do
    # Pods for testing
    pod 'Firebase/Core'
end
